#################
## Spotify CLI ##
#################

# Searching
alias ssa="spotify play artist"
alias ssp="spotify play list"
alias sss="spotify play song"

# Sharing is caring
alias sshare="spotify share uri | awk '{print $3}' | pbcopy"
alias splay="spotify play uri $(pbpaste)"

# Pre-progmmed playlists
alias chill="spotify play list 'chillstep'"
alias bossfight="spotify play list 'boss fight music'"
alias hackermode="spotify play 'Fuck me Im Famous'"
alias powercoding="spotify play uri spotify:playlist:41Cd3KyEshyN1JduIfSJsc"
alias coffee="spotify play uri spotify:playlist:62v27bp6b1mtBI9WjkDszf"
alias latenight="spotify play uri spotify:playlist:3uxOHxpC8QpK5oHPuu6O0V"
